<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand navbar-logo" href="/">StudyForum</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><img src="~/Content/Img/user.png" class="img-responsive img-thumbnail navbar-avatar pull-right" alt="user"></li>
                    <li class="dropdown">
                        @(User.Identity.IsAuthenticated ? 
                            Html.ActionLink(User.Identity.Name, "Index", "Profile", null, new {style = "font-size: 24px !important;", @class = "navbar-logo dropdown-toggle ", datatoggle = "dropdown", role = "button", ariahaspopup = "true", ariaexpanded = "false"}) : 
                            Html.ActionLink("Войти", "SignIn", "Account"))
                        @*<a href="#" style="font-size: 24px !important;" class="navbar-logo dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Имя Фамилия<span class="caret"></span></a>*@
                        <ul class="dropdown-menu">
                            <li><a href="#">Изменить аватар</a></li>
                            <li><a href="#">Изменить группу</a></li>
                            <li><a href="#">Изменить ФИО</a></li>
                            <li><a href="#">Изменить почту</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Выйти из системы</a></li>
                        </ul>
                    </li>
                </ul>   
                

                <form class="navbar-form navbar-right">
                    @*@if (User.Identity.IsAuthenticated)
                    {
                        <div class="input-group">
                            @Html.ActionLink("Создать тему", "Create", "Theme", new {@class = "btn btn-success"})
                        </div>
                    }*@
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Поиск по темам">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                

            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-md-2 fill-background" style="min-height: 2000px; text-align: center">
            <h4>Последние темы</h4>
            <ul class="text-left">
                @for (int i = 0; i < 14; i++)
            {
                    <li><a href="#">Название темы @(i + 5465746)</a></li>
                }
            </ul>
        </div>
        <div class="col-md-8">
            <div class="body-content">
                @RenderBody()
            </div>
        </div>
        <div class="col-md-2 fill-background" style="min-height: 2000px; text-align: center">
            <h4>Обсуждаемые темы</h4>
            <ul class="text-left">
                @for (int i = 0; i < 8; i++)
            {
                    <li><a href="#">Название темы @(i + 1000000)</a></li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
