@{
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
    ViewBag.Title = "SignIn";
}
@model StudyForum.WEB.ViewModels.SignInViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/Account.css" />
</head>
<body>

<div class="signin-container col-md-3 col-md-offset-4">
    <h2>Вход в систему</h2>

    @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
    {
        @Html.Hidden("returnUrl", (string)ViewBag.ReturnUrl)

        <div class="form-group">
            @Html.Label("Адрес электронной почты", new {@class = "control-label"})
            @Html.TextBox("Email", null, new {@class = "form-control"})
            @Html.ValidationMessage("Email", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.Label("Пароль", new {@class = "control-label"})
            @Html.Password("Password", null, new {@class = "form-control"})
            @Html.ValidationMessage("Email", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.CheckBox("IsPersistent", null)
            @Html.Label("Запомнить меня")
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Войти" />
        </div>
        
        <div class="form-group">
            @Html.ActionLink("Зарегистрироваться", "SignUp")
        </div>
    }
</div>
</body>
</html>
