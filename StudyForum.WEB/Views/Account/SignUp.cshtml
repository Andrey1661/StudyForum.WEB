@{
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
    ViewBag.Title = "Register";
    Html.EnableClientValidation(true);
}
@model StudyForum.WEB.ViewModels.RegisterViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Account.css" />
    <script type="text/javascript" src="~/Scripts/site/Combobox.js"></script>
</head>
<body>

<div class="signin-container col-md-3 col-md-offset-4">
    
    <h2>Регистрация</h2>

    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Адрес электронной почты", new { @class = "control-label" })
            @Html.TextBox("Email", null, new { @class = "form-control" })
            @Html.ValidationMessage("Email", new { @class = "text-danger" })
        </div>

            <div class="form-group">
                @Html.Label("Пароль", new { @class = "control-label" })
                @Html.Password("Password", null, new { @class = "form-control" })
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Повтор пароля", new { @class = "control-label" })
                @Html.Password("RepeatPassword", null, new { @class = "form-control" })
                @Html.ValidationMessage("RepeatPassword", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Фамилия", new { @class = "control-label" })
                @Html.TextBox("SecondName", null, new { @class = "form-control" })
                @Html.ValidationMessage("SecondName", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Имя", new { @class = "control-label" })
                @Html.TextBox("FirstName", null, new { @class = "form-control" })
                @Html.ValidationMessage("FirstName", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Отчество", new { @class = "control-label" })
                @Html.TextBox("Patronymic", null, new { @class = "form-control" })
                @Html.ValidationMessage("Patronymic", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Группа", new { @class = "control-label" })
                <div>
                    <input id="inputGroup" list="groupList" type="text" class="form-control" />
                    <input type="text" hidden="hidden" id="GroupId" name="GroupId" />
                    <datalist id="groupList"></datalist>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Зарегистрироваться" />
            </div>

            <div class="form-group">
                @Html.ActionLink("Уже есть аккаунт? Войдите", "SignIn")
            </div>
    }
