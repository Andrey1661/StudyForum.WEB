@model StudyForum.WEB.ViewModels.CreateThemeViewModel

<title>CreateTheme</title>
    
<script type="text/javascript" src="~/Scripts/site/Message.js"></script>
<link rel="stylesheet" href="~/Content/Styles/Files.css"/>

<div class="row" style="margin-top: 20px">
    @using (Html.BeginForm("Create", "Theme", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(t => t.SubjectId)

        <div class="form-group">
            @Html.Label("Название темы")
            @Html.TextBoxFor(t => t.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Введите текст сообщения")
            @Html.TextArea("Content", new {@class = "form-control", style = "width: 50%; height: 100px; max-width: inherit; resize: none;"})
        </div>
        <div id="fileTagsContainer"></div>
        <div id="filesContainer"></div>

        <input type="submit" value="Создать тему" class="btn btn-success">
    }
</div>
